#Functions

def get_account_single():
    try:
        print(f"{Colors.pink}>> {Colors.white}Enter your Steam account details.{Colors.white}")
        username = input(f"{Colors.pink}>> {Colors.white}User: {Colors.white}")
        password = input(f"{Colors.pink}>> {Colors.white}Password: {Colors.white}")
        print()
        print(f"\r{Colors.pink}>> {Colors.white}Logging in.{Colors.white}", end="")
        time.sleep(0.5)
        print(f"\r{Colors.pink}>> {Colors.white}Logging in..{Colors.white}", end="")
        time.sleep(0.5)
        print(f"\r{Colors.pink}>> {Colors.white}Logging in...{Colors.white}", end="")
        time.sleep(2)
        #steamClient = SteamClient()
        #steamClient.cli_login(username, password)
        print(f"\r{Colors.pink}>> {Colors.white}Logged In!\t{Colors.white}", end="")
        return True
    except:
        print(f"\r{Colors.pink}>> {Colors.white}Unable to log in!\t\n\n{Colors.white}", end="")
        return False

